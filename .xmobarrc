Config {
    font = "xft:Unibit",
    bgColor = "black",
    fgColor = "grey",
    position = TopW L 90,
    lowerOnStart = True,
    commands = [
        Run Battery [] 300,
        Run Thermal "THM0" ["-t", "<temp>°C"] 300,
        Run Thermal "THM1" ["-t", "<temp>°C"] 300,
        Run Date "%Y-%m-%d, %H:%M" "date" 300,
        Run StdinReader
    ],
    sepChar = "%",
    alignSep = "}{",
    template = "%StdinReader% }{ <fc=#87CEFA>%battery%</fc> | <fc=#00FF7F>%THM0%, %THM1%</fc> | <fc=#FFA500>%date%</fc>"
}
