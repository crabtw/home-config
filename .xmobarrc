Config {
    font = "xft:Unibit",
    bgColor = "black",
    fgColor = "grey",
    position = TopW L 90,
    lowerOnStart = True,
    commands = [
        Run Date "%Y-%m-%d, %H:%M" "date" 300,
        Run StdinReader
    ],
    sepChar = "%",
    alignSep = "}{",
    template = "%StdinReader% }{ <fc=#FFA500>%date%</fc>"
}
